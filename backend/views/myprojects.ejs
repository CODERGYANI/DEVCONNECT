<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Projects</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f5f7fa;
      font-family: "Poppins", sans-serif;
    }
    .container {
      margin-top: 60px;
    }
    .card {
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.2s ease-in-out;
    }
    .card:hover {
      transform: translateY(-5px);
    }
    .header {
      text-align: center;
      margin-bottom: 30px;
    }
    .header h1 {
      font-weight: 600;
      color: #333;
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="header">
      <h1>My Projects</h1>
      <p class="text-muted">Here are all your projects with their details.</p>
    </div>

    <% if (mp && mp.length > 0) { %>
      <div class="row">
        <% mp.forEach((proj, index) => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= proj.name || "Untitled Project" %></h5>
                <p class="card-text"><strong>Access Type:</strong> <%= proj.ownership || "N/A" %></p>
                <p class="card-text text-muted"><%= proj.discription || "No discription provided." %></p>
                <a href="/:>" class="btn btn-primary btn-sm">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center mt-5">
        <h4 class="text-secondary">You have no projects yet.</h4>
        <a href="/projects/create/" class="btn btn-success mt-3">Create New Project</a>
      </div>
    <% } %>
  </div>

</body>
</html>
